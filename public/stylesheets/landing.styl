@import 'base'

.window
    overflow hidden

.container
    width 100%
    height 400%

.input1,
.input2,
.input3,
.input4
  position relative
  display none

.main
    margin 0 auto
    position relative
    top 40%

    @media screen and (max-width: 60rem)
        top 40%
        width 40rem

.main1, .main2
    @extend .main
    width 40%

.main3
    @extend .main
    width 55.6rem

.main4
    @extend .main
    width 61rem

.main5
    @extend .main
    width 83.5rem

input
    outline none
    border none
    height 9rem
    width 100%
    font-size 6.69rem
    font-family 'Nexa-Light', sans-serif
    margin-top 1.5rem
    margin-bottom 0

.input1 h2
    font-size 1.6rem

.appender, .appeAge
    width 100%

.login
    position fixed
    right 3rem
    top 0
    display none
    cursor pointer
    z-index 999

.login .appended
    background-color rgba(74,77,77,1)
    text-align center
    text-decoration none
    padding 2rem
    color white
    display block
    cursor pointer

.input2 h2
    display none

.input2 h2, .input3 h2, .input4 h2
    font-size 2.67rem
    margin 0

.input2 h3, .input2 h3 span, .input4 h2 span
    font-size 2.144rem
    margin 4rem 0 0 4rem
    display none

.input2 h3 span, .input3 h4
    position relative
    top 3rem

.appenderAge
    display none
    padding 0
    margin-bottom 1.5rem

.submits, .submitsAge
    text-align center
    text-decoration none
    height auto
    background-color base_gray
    color white
    padding 1rem
    width 100%
    display none

    @media screen and (max-width: 60rem)
        width 40rem

.submits:hover, .submitsAge:hover
    background-color lighten(base_gray, 20%)

#chart
    position absolute
    left -61rem
    top -30rem
    transform rotate(124deg)
    -webkit-transform rotate(124deg)
    -moz-transform rotate(124deg)
    -o-transform rotate(124deg)
    -ms-transform rotate(124deg)

#ageChart
    position absolute
    left -45rem
    bottom -45rem

#backChart
    position absolute
    bottom -60rem
    left -10rem

.canva1p
    position absolute
    display none
    left 27rem

.canva1a
    position absolute
    display none
    left 34.7rem
    background-color base_gray
    text-align center
    text-decoration none
    padding 1.4rem
    color white
    font-size 2.01rem

.canva2a, .register
    position absolute
    display none
    left 67%
    background-color base_gray
    text-align center
    text-decoration none
    padding 1.4rem
    color white
    font-size 2.01rem
    width 20rem

.register
    bottom -20rem
    display block !important
    left 42%

.gender
    display none
    overflow auto

.gender li, .input5 li
    float left
    margin-right 3.5rem

.gender li a, .input5 li a, .loginPage li a
    text-align center
    text-decoration none
    height auto
    color white
    padding 1rem
    width 24.3rem
    opacity 0.9
    display block

.gender li a:hover, .input5 li a:hover, .loginPage li a:hover
    background-color lighten(base_gray, 20%)

.input3 h5
    margin 1rem 0 2rem 0

.female
    background-color darksalmon

.male
    background-color lightseagreen

.grayed
    cursor default !important
    opacity 0.2 !important

.grayed:hover
    background-color rgba(0, 0, 0, 0.55) !important

.input3 h3
    margin-top 6rem
    display none

.input3 h4
    margin 1rem 0 0 20rem
    display none

.pass
    position fixed
    top 2rem
    left 0rem
    background-color base_gray
    z-index 999

.pass a
    text-decoration none
    padding 1.5rem
    color white
    font-size 1.6rem
    display block

.input5 input
    height 5rem
    font-size 1.87rem
    margin 0
    margin-left 1rem
    width 15rem

.input4 h2 span
    top 1rem
    position relative

.input4 h3
    display none
    position relative
    top 4rem
    left 3rem

.input5
    display none
    position fixed
    top 0
    left 0
    z-index 99
    background-color white

.input5 h1
    font-size 2.67rem
    margin-bottom 3rem

.submit
    cursor pointer
    background-color base_gray
    color white

.input5 ul, .loginPage ul
    margin-top 3rem

.facebook
    background-color #4764B3

.twitter
    background-color #00ACEE

.google
    background-color #D7554F

.errAge
    position absolute
    top 0
    display none

.loginPage
    width 30%
    height 30%
    margin 5% auto 0

.loginPage h1
    font-size 2.67rem

.loginPage input
    width 100%
    font-size 2.67rem

.loginPage input[type="submit"]
    cursor pointer
    height 5rem
    background-color base_gray
    color white

.show
    display block

.loginPage li a
    margin-bottom 1.5rem
    margin-right 0rem
    width 100%
    font-size 2.144rem